<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/firstTextView"
        android:editable="true"
        android:clickable="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterEmailEditText"
        android:layout_below="@+id/firstTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/firstTextView"
        android:layout_alignEnd="@+id/firstTextView"
        android:hint="Email address"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register / Login"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/enterEmailEditText"
        android:layout_centerHorizontal="true"
        android:onClick="registerClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/mainErrorTextView"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0000"
        android:gravity="center" />


</RelativeLayout>
